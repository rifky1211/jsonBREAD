<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=
    , initial-scale=1.0"
    />
    <title>Data</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>

    <table class="table">
      <tr>
        <th>ID</th>
        <th>String</th>
        <th>Integer</th>
        <th>Float</th>
        <th>Date</th>
        <th>Boolean</th>
        <th>Action</th>
      </tr>
      <% datas.forEach((item, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.string %></td>
        <td><%= item.integer %></td>
        <td><%= item.float %></td>
        <td><%= item.date %></td>
        <td><%= item.boolean %></td>
        <td>
          <a href="/edit/<%= index %>" class="btn-edit">Edit</a>
          <a href="/delete/<%= index %>" class="btn-delete">Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/add" class="btn-add">Add</a>
  </body>
</html>
